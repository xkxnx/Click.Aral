  <script>
    // CountAPI namespace para stable data
    const NAMESPACE = "xkxnx-official-world";

    // Viewer Counter (CountAPI)
    fetch(`https://api.countapi.xyz/hit/${NAMESPACE}/visits`)
      .then(res => res.json())
      .then(data => {
        document.getElementById("viewCount").innerText = data.value;
      });

    // Heart Counter
    const heartBtn = document.getElementById("heartBtn");
    const heartCount = document.getElementById("heartCount");

    fetch(`https://api.countapi.xyz/get/${NAMESPACE}/hearts`)
      .then(res => res.json())
      .then(data => {
        heartCount.innerText = data.value || 0;
      });

    heartBtn.addEventListener("click", () => {
      heartBtn.classList.add("liked");
      fetch(`https://api.countapi.xyz/hit/${NAMESPACE}/hearts`)
        .then(res => res.json())
        .then(data => {
          heartCount.innerText = data.value;
        });
    });
  </script>

